{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .image-with-text__grid {
    display: flex;
    flex-direction: row-reverse; /* Reversing the direction to place the image on the right */
    align-items: center; /* Align items vertically */
    justify-content: space-between; /* Align items horizontally */
    background-color: white;
    padding-right:70px;
    margin-bottom:100px;
  }

  .image-with-text__text rte body {
    margin-top: 6rem;
  }

  .image-with-text__media-item,
  .image-with-text__text-item {
    width: calc(50% - 20px); /* Each takes half of the container width minus padding */
    box-sizing: border-box;
  }

  .image-with-text__media {
    max-width: 100%;
  }

  .image-with-text__media img {
    width: 100%;
    height: auto;
    display: block;
  }

  .image-with-text__content {
    max-width: 100%;
  }

  .image-with-text__text h4 {
    font-family: 'Poppins', 'FFDINWebProBold', 'Arial', 'Helvetica', 'Sans-Serif';
    font-size: 22px; /* Adjust font size as needed */
    line-height: 1.3; /* Adjust line height as needed */
    margin-bottom: 10px;
  }

  .image-with-text__text h1 {
    font-family: 'Poppins', 'FFDINWebProBold', 'Arial', 'Helvetica', 'Sans-Serif';
    letter-spacing: -.025em;
    font-size: 30px;
    margin-bottom: -23px;
  }

  .image-with-text__text {
    font-family: 'Poppins', 'FFDINWebProBold', 'Arial', 'Helvetica', 'Sans-Serif';
    font-size: 14px; /* Adjust font size as needed */
    line-height: 1.3; /* Adjust line height as needed */
    color: black;
  }

  .navigation {
    font-family: 'Poppins', 'FFDINWebProBold', 'Arial', 'Helvetica', 'Sans-Serif';
    font-size: 14px; /* Adjust font size as needed */
    line-height: 1.3; /* Adjust line height as needed */
    color: black;
    margin-top: 40px;
    margin-left: 20px;
  }
{%- endstyle -%}

{%- assign fetch_priority = 'auto' -%}
{%- if section.index == 1 -%}
  {%- assign fetch_priority = 'high' -%}
{%- endif -%}

{%- assign remove_color_classes = false -%}
{%- if section.settings.color_scheme == section.settings.section_color_scheme
  and section.settings.content_layout == 'no-overlap'
-%}
  {%- assign remove_color_classes = true -%}
{%- endif -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="navigation">
      <ul>
        {% assign hem_menu = linklists['hem-inredning'].links %}
        {% if hem_menu.size > 0 %}
          {% for link in hem_menu %}
            <li>{{ link.title | link_to: link.url }}</li>
          {% endfor %}
        {% else %}
          <li>No links found in the "Hem inredning" link list.</li>
        {% endif %}
      </ul>
    </div>
    <div class="image-with-text image-with-text--{{ section.settings.content_layout }} isolate">
      <div class="image-with-text__grid grid grid--gapless grid--1-col grid--2-col-tablet image-with-text__grid--reverse">
        <!-- Image Content -->
        <div class="image-with-text__media-item image-with-text__media-item--medium image-with-text__media-item--top grid__item">
          <div
            class="image-with-text__media image-with-text__media--adapt global-media-settings background-transparent media"
            style="padding-bottom: 56.26506024096385%;"
          >
            <img
              src="//cdn.shopify.com/s/files/1/0694/4142/1548/files/hom.webp?v=1710754508&amp;width=1500"
              alt=""
              srcset="//cdn.shopify.com/s/files/1/0694/4142/1548/files/hom.webp?v=1710754508&amp;width=165 165w, //cdn.shopify.com/s/files/1/0694/4142/1548/files/hom.webp?v=1710754508&amp;width=360 360w, //cdn.shopify.com/s/files/1/0694/4142/1548/files/hom.webp?v=1710754508&amp;width=535 535w, //cdn.shopify.com/s/files/1/0694/4142/1548/files/hom.webp?v=1710754508&amp;width=750 750w, //cdn.shopify.com/s/files/1/0694/4142/1548/files/hom.webp?v=1710754508&amp;width=1070 1070w, //cdn.shopify.com/s/files/1/0694/4142/1548/files/hom.webp?v=1710754508&amp;width=1500 1500w"
              width="1500"
              height="844"
              sizes="(min-width: 1200px) 550px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
              fetchpriority="{{ fetch_priority }}"
            >
          </div>
        </div>

        <!-- Additional Content -->
        <div class="image-with-text__text-item grid__item">
          <div
            id="ImageWithText--template--17678114619628__image_with_text_KBF9tH"
            class="image-with-text__content image-with-text__content--top image-with-text__content--desktop-left image-with-text__content--mobile-left image-with-text__content--adapt content-container background-transparent"
          >
            <div
              class="image-with-text__text rte body"
              data-shopify-editor-block="{&quot;id&quot;:&quot;text_DHA8hX&quot;,&quot;type&quot;:&quot;text&quot;}"
              data-live-text-setting="section.template--17678114619628__image_with_text_KBF9tH.block.text_DHA8hX.text"
            >
              <h1><strong>Hem &amp; inredning</strong></h1>
              <h4><strong>Förnya inredningen</strong></h4>
              <p>
                Uppdatera inredningen enkelt med hjälp av mjuka textilier, dekorationer och belysning. Vi tycker att det
                ska vara lätt att inreda efter säsong, därför ser vi till att förnya vårt sortiment så ofta vi kan med
                nya favoriter. Hos oss hittar du ett brett utbud av kuddar, plädar, gardiner, mattor, konstväxter och
                lampor. Vi har även funktionella småmöbler som brickbord, sittpuffar, pallar och bänkar i olika stilar
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

